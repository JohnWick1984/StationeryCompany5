<Window x:Class="StationeryCompany5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StationeryCompany5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <ComboBox x:Name="StationeryComboBox" DisplayMemberPath="Product_Name" SelectedValuePath="Product_ID" SelectionChanged="StationeryComboBox_SelectionChanged" Margin="0 0 0 10"/>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameTextBox" Margin="0 0 0 10"/>
            <TextBlock Text="Type:"/>
            <TextBox x:Name="TypeTextBox" Margin="0 0 0 10"/>
            <TextBlock Text="Quantity:"/>
            <TextBox x:Name="QuantityTextBox" Margin="0 0 0 10"/>
            <TextBlock Text="Price:"/>
            <TextBox x:Name="PriceTextBox" Margin="0 0 0 10"/>
            <Button Content="Save Changes" Click="SaveChangesButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
